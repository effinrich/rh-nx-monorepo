{
  "name": "portal",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/portal/src",
  "projectType": "application",
  "tags": ["scope:portal", "type:app"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/portal"
      },
      "dependsOn": [],
      "configurations": {
        "dev": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        },
        "prod": {
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "portal:build",
        "hmr": true
      },
      "configurations": {
        "development": {
          "buildTarget": "portal:build:development"
        },
        "production": {
          "buildTarget": "portal:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "defaultConfiguration": "default",
      "configurations": {
        "default": {
          "fix": true
        },
        "format": {
          "fix": true
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/portal/jest.config.ts",
        "passWithNoTests": true
      },
      "defaultConfiguration": "ci",
      "configurations": {
        "ci": {
          "runInBand": true,
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "check-types": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx tsc -p ./tsconfig.app.json",
          "npx tsc -p ./tsconfig.spec.json"
        ],
        "parallel": true,
        "cwd": "apps/portal"
      }
    },
    "generate-company-api-client": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx nx workspace-generator openapi-to-axios-client --clientName=CompanyAPI --location=/src/external/company-api --projectName=portal --url=https://company-api.dev.redesignhealth.com/public/open-api",
          "npx prettier --write ./apps/portal/src/external/company-api/*.{d.ts,ts}"
        ],
        "parallel": false
      }
    },
    "generate-company-api-client-local": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx nx workspace-generator openapi-to-axios-client --clientName=CompanyAPI --location=/src/external/company-api --projectName=portal --url=http://localhost:8080/public/open-api",
          "npx prettier --write ./apps/portal/src/external/company-api/*.{d.ts,ts}"
        ],
        "parallel": false
      }
    },
    "build-image": {
      "executor": "@nx-tools/nx-container:build",
      "dependsOn": ["build"],
      "options": {
        "load": true,
        "platforms": ["${NX_CONTAINER_IMAGE_ARCH}"],
        "tags": ["${NX_CONTAINER_IMAGE_TAG}"]
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "portal:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "portal:build:development"
        },
        "production": {
          "buildTarget": "portal:build:production"
        }
      },
      "dependsOn": ["build"]
    }
  }
}
