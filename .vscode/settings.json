{
  "editor.codeActionsOnSave": {
    "source.fixAll.markdownlint": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "eslint.options": {
    "extensions": [".js", ".jsx", ".md", ".mdx", ".ts", ".tsx"]
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.validate": [
    "markdown",
    "mdx",
    "md",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "/node_modules": true,
    "**/coverage": true,
    "**/dist": true,
    "**/tmp": true,
    "**/package-lock.lock": true
  },
  "files.exclude": {
    "**/.git": false,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/CVS": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true,
    "**/.wrangler": true,
    "**/migrations": true,
    "**/node_modules": true,
    "**/tsconfig.json": true,
    "**/wrangler.toml": true,
    "**/.prettierrc": true,
    "**/.watchmanconfig": true,
    "**/tsconfig.base.json": true,
    "**/.gitignore": true,
    "**/types": true,
    "**/dist": true,
    "apps/expo/index.js": true,
    "**/metro.config.js": true,
    "**/eas.json": true,
    "**/tamagui.config.ts": true,
    "**/babel.config.js": true,
    "**/.expo": true,
    "**/.next": true,
    "**/.tamagui": true,
    "**/.eslintrc.js": true,
    "**/next-env.d.ts": true,
    "**/.vscode": false,
    "**/.turbo": true,
    "**/out": true,
    "SECURITY.md": true,
    "LICENSE": true,
    ".gitpod.yml": true,
    ".npmrc": true,
    "bun-workspace.yaml": true,
    "renovate.json": true,
    "turbo.json": true,
    "**/cfImageLoader.js": true,
    "**/sw.js": true,
    "**/tamagui.css": true,
    "apps/next/public/*.js": true,
    "**/expo-env.d.ts": true,
    "**/generate-tamagui-json.js": true,
    "apps/docs/public/*.js": true,
    "**/.eslintrc.json": true,
    "**/.vscodeignore": true
  },
  "remark.preview.showPreviewOptionInMenuBar": true,
  "remark.preview.scrollPreviewWithEditor": true,
  "workbench.colorCustomizations": {
    "statusBar.noFolderBackground": "#222225",
    "editor.lineHighlightBackground": "#1073cf2d",
    "editorBracketMatch.border": "#575B5F",
    "editor.lineHighlightBorder": "#9fced11f"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "mdx.experimentalLanguageServer": true,
  "json.schemas": [
    {
      "fileMatch": ["/package.json"],
      "url": "https://json.schemastore.org/package",
      "schema": true
    }
  ],
  "java.configuration.updateBuildConfiguration": "automatic",
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8",
    "editor.formatOnSave": true
  },
  "explorerExclude.backup": {},
  "java.compile.nullAnalysis.mode": "automatic",
  "vitest.disableWorkspaceWarning": true
}
