{
  "name": "portal-utils",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/portal/utils/src",
  "projectType": "library",
  "tags": ["scope:portal"],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "check-types": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx tsc --noEmit -p libs/portal/utils/tsconfig.lib.json"]
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/libs/portal/utils"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/libs/portal/utils"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../../coverage/libs/portal/utils"
      }
    }
  }
}
