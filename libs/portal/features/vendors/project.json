{
  "name": "portal-features-vendors",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/portal/features/vendors/src",
  "projectType": "library",
  "tags": ["scope:portal"],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/libs/portal/features/vendors"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "libs/portal/features/vendors/jest.config.ts",
        "passWithNoTests": true
      },
      "defaultConfiguration": "ci",
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true,
          "runInBand": true
        }
      },
      "outputs": ["{workspaceRoot}/coverage/libs/portal/features/vendors"]
    }
  }
}
